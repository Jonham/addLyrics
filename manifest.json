{
    "manifest_version": 2,

    "name": "addLyrics",
    "description": "Add lyrics to DoubanFM.",
    "version": "1.0",
    
    "browser_action": {
        "default_title": "addLyrics",
        //"default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
            "matches": ["http://*/*","https://*/*"],
            "js": ["js/content.js"],
            "run_at": "document_start"
    }],
    "permissions": ["http://douban.fm/"]
}